{
  "name": "puglite",
  "private": true,
  "@rollingversions/ignore": true,
  "workspaces": [
    "packages/*"
  ],
  "devDependencies": {
    "@angular/compiler-cli": "^20.0.0",
    "jest": "^29.7.0",
    "prettier": "^2.8.8",
    "typescript": "^5.9.3"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/raykin/puglite"
  },
  "scripts": {
    "prettier:check": "prettier --ignore-path .gitignore --list-different './**/*.js'",
    "format": "prettier --ignore-path .gitignore --write './**/*.js'",
    "build": "node scripts/prebuild && tsc --build scripts",
    "pretest": "npm run build",
    "test": "jest",
    "coverage": "jest --coverage",
    "watch": "jest --watch"
  },
  "jest": {
    "testEnvironment": "node",
    "testMatch": [
      "**/packages/**/*.test.js"
    ],
    "snapshotSerializers": [
      "./scripts/filename-serializer.js",
      "./scripts/prettier-javascript-serializer.js",
      "./scripts/buffer-serializer.js"
    ]
  },
  "license": "MIT"
}
